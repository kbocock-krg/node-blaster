{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "outDir": "./dist",
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "noImplicitThis": true,
      "alwaysStrict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "experimentalDecorators": true,
      "strictPropertyInitialization": false,
      "sourceMap": true,
      "declaration": true
    },
    "include": [
      "./src"
    ],
    "types": [
        "node"
    ]
  }